{
  "name": "penjj-blog",
  "description": "My personal website and blog.",
  "type": "module",
  "packageManager": "pnpm@8.6.12",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "prepare": "simple-git-hooks",
    "ts-check": "tsc --noEmit && astro check --noEmit",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx,.astro --fix"
  },
  "dependencies": {
    "astro": "^3.1.0",
    "classnames": "^2.3.2",
    "solid-js": "^1.7.12"
  },
  "devDependencies": {
    "@astrojs/check": "^0.2.0",
    "@astrojs/mdx": "^1.1.0",
    "@astrojs/solid-js": "^3.0.1",
    "@iconify-json/bi": "^1.1.20",
    "@penjj/eslint-config": "^0.3.7",
    "@unocss/preset-attributify": "^0.55.7",
    "@unocss/reset": "^0.56.4",
    "happy-dom": "^12.1.2",
    "bumpp": "^9.2.0",
    "daisyui": "^3.7.5",
    "lint-staged": "^14.0.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "unocss": "^0.55.7",
    "unocss-preset-daisy": "^6.0.1",
    "vitest": "^0.34.4",
    "vue-commitlint": "^0.1.0",
    "cssnano": "^6.0.1",
    "postcss-nested": "^6.0.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm vue-commitlint"
  },
  "lint-staged": {
    "*.{ts,tsx,astro}": [
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": "@penjj",
    "rules": {
      "max-len": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "^astro:"
          ]
        }
      ]
    }
  },
  "prettier": "@penjj/prettier-config",
  "engines": {
    "node": ">=18.0.0"
  }
}
